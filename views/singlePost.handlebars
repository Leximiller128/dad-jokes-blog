<div class="container text-center">
  <div class="row">
    <div class="col-4">
      <nav class="navbar">
        <p>Hello {{user.username}}</p>
        <ul>
          <li class="li-inline nav-item listNav"><a class="sideNav" href="/">Homepage</a></li>
          <li class="li-inline nav-item listNav"><a class="sideNav" href="#">Your Posts/Profile</a></li>
          <li class="li-inline nav-item listNavEnd"><a class="sideNav" href="#">New Post</a></li>
          <li class="li-inline nav-item"><a class="sideNav" href="#" id="logout-link">Logout</a></li>
        </ul>
      </nav>
     <div class="posts">
        {{#each posts}}
        <article class="card">
          <div class="card-header flex-row justify-space-between">
            <h2>
              <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
            {{body}}
            </div>
          </div>
          <div class="card-body">
              Posted by {{username}} on
          </div>
        </article>
          {{/each}}
      </div>