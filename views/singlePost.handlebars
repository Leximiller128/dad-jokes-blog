<div class="container text-center">
  <div class="row">
    <div class="col-4">
      <nav class="navbar">
        <p>Hello {{username.username}}!</p>
        <ul>
          <li class="li-inline nav-item listNav"><a class="sideNav" href="/">Homepage</a></li>
          <li class="li-inline nav-item listNav"><a id="profile" class="sideNav" href="/dashboard/profile/{{username.userId}}">Your Posts</a></li>
          <li class="li-inline nav-item listNavEnd"><a class="sideNav" href="/dashboard/new">New Post</a></li>
          <li class="li-inline nav-item listNavEnd"><a class="sideNav" id="date"></li>
          <li class="li-inline nav-item"><a class="sideNav" href="#" id="logout-link">Logout</a></li>
        </ul>
      </nav>
    </div>
    <div class="col area">
      <div class="card" id="singlepost">
        <h5 class="card-header">A Joke from {{username}}</h5>
        <div class="card-body">
          <h5 class="card-title">{{post.title}}</h5>
          <p class="card-text">{{post.body}}</p>
          <p class="date">Posted on: {{format_date post.createdAt}}</p>
          <a href="/" class="btn btn-light" id="backToDash-btn">Back to Homepage</a>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
