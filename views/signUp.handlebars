    <div class="col-6">
      <form id="signup-form">
        <div class="form-group">
          <label for="nameSignup">Name</label>
          <input 
          type="Name" id="name"
          class="form-control"
          placeholder="What can we call you?" />
        </div>
        <div class="form-group">
          <label for="emailSignup">Email Address</label>
          <input 
          type="email" id="email-signup"
